{
  "name": "netlify-plugin-example",
  "version": "0.0.1",
  "description": "Netlify Build plugin - {{description}}",
  "type": "module",
  "exports": "./src/index.js",
  "main": "./src/index.js",
  "files": [
    "src/**/*.js",
    "src/**/*.json",
    "src/**/*.sh",
    "src/**/*.html",
    "src/**/*.ejs",
    "manifest.yml"
  ],
  "scripts": {
    "init": "npm install --loglevel error --no-audit --no-fund && node init/bin.js",
    "build": "netlify-build",
    "test": "npm run lint && npm run ava",
    "lint": "npm run eslint && npm run prettier",
    "eslint": "eslint --ignore-path .gitignore --fix --cache --format=codeframe --max-warnings=0 \"{src,init}/**/*.{cjs,mjs,js}\"",
    "prettier": "prettier --ignore-path .gitignore --write --loglevel warn \"{.github,src,init}/**/*.{cjs,mjs,js,md,yml,json}\" \"*.{cjs,mjs,js,md,yml,json}\"",
    "ava": "cross-env FORCE_COLOR=1 ava --verbose",
    "release": "release-it"
  },
  "keywords": [
    "netlify-plugin",
    "netlify"
  ],
  "author": "{{author}} <{{email}}>",
  "license": "{{license}}",
  "repository": "{{repo}}",
  "directories": {
    "lib": "src",
    "test": "test"
  },
  "devDependencies": {
    "@netlify/build": "^26.1.4",
    "ava": "^3.13.0",
    "chalk": "^4.1.0",
    "cpy": "^8.1.1",
    "cross-env": "^7.0.2",
    "del": "^6.0.0",
    "email-validator": "^2.0.4",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "execa": "^5.0.0",
    "fast-glob": "^3.2.4",
    "filter-obj": "^2.0.1",
    "fuzzy": "^0.1.3",
    "git-remote-origin-url": "^3.1.0",
    "inquirer": "^8.0.0",
    "inquirer-autocomplete-prompt": "^1.2.0",
    "netlify-cli": "^8.17.1",
    "omit.js": "^2.0.2",
    "prettier": "^2.1.2",
    "release-it": "^14.0.3",
    "semver": "^7.3.2",
    "spdx-license-list": "^6.3.0",
    "strip-ansi": "^6.0.0",
    "username": "^5.1.0",
    "yargs": "^17.0.0"
  },
  "engines": {
    "node": "^12.20.0 || ^14.14.0 || >=16.0.0"
  },
  "ava": {
    "verbose": true,
    "timeout": "100s",
    "environmentVariables": {
      "FORCE_COLOR": "1"
    }
  }
}
